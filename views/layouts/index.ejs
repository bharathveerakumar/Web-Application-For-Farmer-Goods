<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@700&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Fjalla+One&display=swap" rel="stylesheet">
    <title>Farmer's Portal</title>
</head>

<body>

    <!-- navigation bar -->
    <nav>
        <div class="titlecont">
            <img src="logo.png" alt="LOGO" class="logo">
            <div class="titledata">
                <h1 class="title">EXPRESS AGRI</h1>
                <h3 class="slogan">The Farmer's Portal</h3>
            </div>
        </div>
        <ul class="hideul">
            <li><a href="/">PRODUCTS</a></li>
            <li><a href="aboutus">ABOUT US</a></li>
            <li><a href="sell">SELL</a></li>
            <li><a href="<%= name1 %>"> <%= name %> </a></li>
        </ul>
        <div class="menuicon">
            <div class="m"></div>
            <div class="m"></div>
            <div class="m"></div>
        </div>
        <ul class="opt">
            <li><a href="/">PRODUCTS</a></li>
            <li><a href="aboutus">ABOUT US</a></li>
            <li><a href="sell">SELL</a></li>
            <li><a href="<%= name1 %>"> <%= name %> </a></li>
        </ul>
    </nav>

    <main>
        <div class="categories">
            <h1>VEGETABLES <img src="vege.jpg" alt="vege"> </h1>
            <div class="vegetable">
                <% for(var i=0;!(i>=rows.length);i++){ %>
                   <% if(rows[i].category=='Vegetable'){ %>
                        <div class="product">
                            <h2><%= rows[i].productname %></h2>
                            <img src="data:image/jpg; base64,<%= rows[i].pphoto %>" alt="pphoto">
                            <h3>Quantity : <%= rows[i].quantitty %> kg</h3>
                            <a href="product?id=<%= rows[i].sell_id %>&name2=<%= rows[i].productname %>">BUY NOW</a>
                        </div>
                    <% } %>
                <% } %>
            </div>
            <h1>FRUITS  <img src="fru.jpg" alt="fru"> </h1>
            <div class="fruits">
                <% for(var i=0;!(i>=rows.length);i++){ %>
                    <% if(rows[i].category=='Fruits'){ %>
                         <div class="product">
                             <h2><%= rows[i].productname %></h2>
                             <img src="data:image/jpg; base64,<%= rows[i].pphoto %>" alt="pphoto">
                             <h3>Quantity : <%= rows[i].quantitty %> kg</h3>
                             <a href="product?id=<%= rows[i].sell_id %>&name2=<%= rows[i].productname %>">BUY NOW</a>
                         </div>
                     <% } %>
                 <% } %>
            </div>
            <h1>DAIRY <img src="dairy.jpg" alt="dairy"> </h1>
            <div class="dairy">
                <% for(var i=0;!(i>=rows.length);i++){ %>
                    <% if(rows[i].category=='Dairy'){ %>
                         <div class="product">
                             <h2><%= rows[i].productname %></h2>
                             <img src="data:image/jpg; base64,<%= rows[i].pphoto %>" alt="pphoto">
                             <h3>Quantity : <%= rows[i].quantitty %> kg</h3>
                             <a href="product?id=<%= rows[i].sell_id %>&name2=<%= rows[i].productname %>">BUY NOW</a>
                         </div>
                     <% } %>
                 <% } %>
            </div>
        </div>
    </main>
    <script src="Javascript/app.js"></script>
</body>
</html>